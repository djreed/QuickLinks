{
	"manifest_version": 2,
  "version": "1.0.0",
  "name": "Quicker Links Web-Wide",
	"shortname": "QuickLinks",
	"description": "Speed up link access via cached AI web crawling",

  "icons": {
  		"16": "icon16.jpg",
  		"32": "icon32.jpg",
  		"48": "icon48.jpg",
  		"128": "icon128.jpg"
  	},

  "content_scripts":
  	[
  		{
  			"matches": ["*://*/*"],
  			"all_frames": true,
  			"js":
        [
          "quicklink.js"
        ],
  			"run_at": "document_end"
  		}
  	],

    "permissions": []
}